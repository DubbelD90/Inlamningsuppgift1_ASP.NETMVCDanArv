@model IEnumerable<Inlamningsuppgift1_ASP.NETMVC.Models.SchoolClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Class Name</th>
            <th>Teacher</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @if(item.Teacher != null)
                {
                    @item.Teacher.DisplayName
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Add a student</a> |
                <a asp-action="AddTeacher" asp-route-id="@item.Id">Add a Teacher</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>