    @if (SignInManager.IsSignedIn(User))
    {

    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">My courses</a>
